<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary"
    android:layoutDirection="ltr"
    tools:context=".fgmMain.CompanyResumeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/background_icon_company"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/shape_background_bottom_left"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgprn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="start"
            android:layout_margin="20dp"
            android:background="@drawable/shape_dor_di"
            android:backgroundTint="?attr/colorOnPrimary"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_logo_3d_no_name" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="-24dp"
            android:layout_marginEnd="-10dp"
            android:layout_marginBottom="-10dp"
            android:background="@drawable/shape_dor_di"
            android:backgroundTint="?attr/colorOnPrimary"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/name_company"
            app:layout_constraintTop_toTopOf="@+id/imgprn" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/img_company"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgprn"
            app:tint="@color/firoze" />

        <TextView
            android:id="@+id/name_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:text="گروه نرم افزاری ویراد"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_location"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:tint="@color/firoze" />

        <TextView
            android:id="@+id/location_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/name_company"
            android:layout_marginEnd="8dp"
            android:text="پیروزی 10 پلاک 102"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_phone"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:tint="@color/firoze" />

        <TextView
            android:id="@+id/number_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/name_company"
            android:layout_marginEnd="8dp"
            android:text="09202800126"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <FrameLayout
        android:id="@+id/icon_company_skill"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:backgroundTint="?attr/colorPrimaryVariant"
        android:background="@drawable/shape_background_light"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/icon_company_resume"
        app:layout_constraintTop_toBottomOf="@+id/background_icon_company">

        <ImageView
            android:id="@+id/ic_company_skill"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/black_dot"
            android:backgroundTint="@color/firoze"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_skill"
            app:tint="@color/white" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/icon_company_resume"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:background="@drawable/shape_background_light"
        android:elevation="5dp"
        app:layout_constraintEnd_toStartOf="@+id/icon_company_skill"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/icon_company_project"
        app:layout_constraintTop_toTopOf="@+id/icon_company_skill" >

        <ImageView
            android:id="@+id/ic_company_resume"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/black_dot"
            android:backgroundTint="?attr/colorOnPrimary"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_resume_company"
            app:tint="@color/white" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/icon_company_project"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:background="@drawable/shape_background_light"
        android:elevation="5dp"
        app:layout_constraintEnd_toStartOf="@+id/icon_company_resume"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/icon_employee_resume"
        app:layout_constraintTop_toTopOf="@+id/icon_company_resume" >

        <ImageView
            android:id="@+id/ic_company_project"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/black_dot"
            android:backgroundTint="?attr/colorOnPrimary"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_project"
            app:tint="@color/white" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/icon_employee_resume"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="45dp"
        android:layout_weight="1"
        android:background="@drawable/shape_background_light"
        android:elevation="5dp"
        app:layout_constraintEnd_toStartOf="@+id/icon_company_project"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/icon_company_project">

        <ImageView
            android:id="@+id/ic_employee_resume"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/black_dot"
            android:backgroundTint="?attr/colorOnPrimary"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_resume_employee"
            app:tint="@color/white" />
    </FrameLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager_resume"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_company_resume" />

</androidx.constraintlayout.widget.ConstraintLayout>