<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp">

    <ImageView
        android:id="@+id/img_employee"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="top|center"
        android:background="@drawable/shape_circle"
        android:backgroundTint="?attr/colorPrimaryVariant"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_male" />

    <TextView
        android:id="@+id/txt_name_employee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:text="علیرضا شهسواری"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/img_employee"
        app:layout_constraintStart_toStartOf="@+id/img_employee"
        app:layout_constraintTop_toBottomOf="@+id/img_employee" />
</LinearLayout>